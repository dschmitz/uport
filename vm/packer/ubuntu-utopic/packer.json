{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "boxname":  "ubuntu_utopic_64",
        "hostname": "ubuntu-utopic-vm"
    },

    "builders": [{
        "headless": true,
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
              
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--vram", "32"],
            ["modifyvm", "{{.Name}}", "--memory", "8192"],
            ["modifyvm", "{{.Name}}", "--cpus", "4"],
            ["modifyvm", "{{.Name}}", "--acpi", "on"],
            ["modifyvm", "{{.Name}}", "--ioapic", "on"],
            ["modifyvm", "{{.Name}}", "--hwvirtex", "on"],
            ["modifyvm", "{{.Name}}", "--nestedpaging", "on"],
            ["modifyvm", "{{.Name}}", "--largepages", "on"],
            ["modifyvm", "{{.Name}}", "--pae", "off"],
            ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
            ["storagectl", "{{.Name}}", "--name", "SATA Controller", "--hostiocache", "on"],
            ["storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "0", "--type", "hdd", "--nonrotational", "on"]
        ],
        "vm_name": "{{user `hostname`}}",
        "disk_size": 65536,
        "hard_drive_interface": "sata",
                                  
        "iso_url": "zsync/utopic-server-amd64.iso",
        "iso_checksum_type": "none",

        "http_directory" : "http",

        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_port": 22,
        "ssh_wait_timeout": "10000s",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
        "boot_wait": "5s",
        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
    		"locale=en_US.UTF-8 kbd-chooser/method=de keymap=de bootkbd=de ",            
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "initrd=/install/initrd.gz -- <enter>"
        ]
    }],

    "provisioners": [
    {
      "type": "file",
      "source": "scripts/pipework.sh",
      "destination": "/tmp/pipework.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/fstab.sh",
            "scripts/base-packages.sh",
            "scripts/java.sh",
            "../packer-install.sh",
            "scripts/systemd.sh",
            "scripts/openvswitch.sh",
            "scripts/virtualbox.sh",
            "scripts/vagrant.sh",
            "scripts/docker.sh"
          ]
        }
      }
    }
    ],

    "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "compression_level": 0,
      "output": "{{user `boxname`}}.box",
      "vagrantfile_template": "./Vagrantfile.template"
    }
    ]
}

